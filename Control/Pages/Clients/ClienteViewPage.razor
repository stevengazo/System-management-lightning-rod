@page "/client/view/{ClientId}"

<div class="text-center  border rounded p-2 mb-2" style="border: 1px solid gray">
    <h2 class="text-center">Información del Cliente</h2>
    <hr />
    <div class="d-flex justify-content-between flex-row">
        <p>
            Información correspondiente al cliente.
        </p>
        <a href="client/list" class="btn btn-info"> Lista de Clientes</a>
    </div>

    <hr />
    <ClientViewComponent ClientId="@ClientId" />
</div>
<div class="text-center  border rounded p-2 mb-2" style="border: 1px solid gray">
    <h3 class="text-center"> Lista de dispositivos Pertenecientes al Cliente</h3>
    <p class="text-center">
        A continuación se muestra la lista de dispositivos pertenecientes al
        cliente:
    </p>
    <ListDevicesComponent ClientId="@ClientId"></ListDevicesComponent>
</div>



@code {
    [Parameter]
    public string ClientId { get; set; }
    protected override async Task OnInitializedAsync()
    {
        ClientId = ClientId;
    }
}