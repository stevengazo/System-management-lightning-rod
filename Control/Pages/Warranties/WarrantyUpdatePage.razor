@page "/warranty/update/{WarrantyId}"





<AuthorizeView Roles="Administrador,Editor">
    <Authorized>    <Animate Animation="Animations.FadeRight" Duration="TimeSpan.FromSeconds(0.1)" Delay="TimeSpan.FromSeconds(0)">
        <div class="text-center">
            <h2> Creación de nuevo registro</h2>
            <hr />
            <a href="warranty/list">Regresar a la lista de Garantias</a>
            <WarrantyUpdateComponent WarrantyId="@WarrantyId.ToString()"></WarrantyUpdateComponent>
        </div>
    </Animate></Authorized>
    <NotAuthorized>
        <NotAvariableComponent />
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public string WarrantyId { get; set; }


    protected override async Task OnInitializedAsync()
    {
        WarrantyId = WarrantyId;
    }
} 