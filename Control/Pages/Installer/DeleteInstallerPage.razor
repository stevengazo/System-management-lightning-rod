@page  "/installer/delete/{installerId}"


<AuthorizeView Roles="Administrador,Editor">
    <Authorized>    <Animate Animation="Animations.FadeRight" Duration="TimeSpan.FromSeconds(0.1)" Delay="TimeSpan.FromSeconds(0)">
        <div>
            <h2 class="text-center">
                Borrar Instalador
            </h2>
            <hr />
            <DeleteInstallerComponent idInstaller="@installerId"/>
        </div>
    </Animate></Authorized>
    <NotAuthorized>
        <NotAvariableComponent />
    </NotAuthorized>
</AuthorizeView>





@code{
    [Parameter]
    public string installerId { get; set; }
    protected override async Task OnInitializedAsync()
    {
        installerId = installerId;
    }
}
