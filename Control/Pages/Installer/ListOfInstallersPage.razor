@page "/installer/list"

<h3>
    Lista de Instaladores 
</h3>
<hr/>
<p>
    Lista de instaladores registrados en la base de datos. Estos instaladores corresponden a los instaladores autorizados para realizar la instalación de equipos.
</p>
<div class="d-flex flex-row">
    <div class="">
        <ListOfInstallersComponent/>
    </div>    
</div>


<SearchInstallerComponent/>


<div>
    <div class="form-group row">
        <div class="col">
            <input type="text"class="rounded form-control" placeholder="Id" />
        </div>
        <div class="col">
            <input type="text"  class="rounded form-control" placeholder="Nombre Instalador" />
        </div>   
    </div>

    <div class="form-group row">
        <div class="col">
            <input class="btn-outline-dark form-control" type="button" value="Buscar" />
        </div>
        <div class="col">
            <input class="btn-outline-dark form-control" type="button" value="Limpiar" />
        </div>
        <div class="col">
            <input class="btn-outline-dark form-control" type="button" value="Exportar" />
        </div>
        <div class="col-1" >
            <button  class=" border-info">
                <span class="oi oi-info" aria-hidden="true"  ></span> 
            </button>            
        </div>
    </div>
    <p class="text-center" style="color:red"> </p>
</div>

<hr/>

<table class="table table-borderless table-hover table-striped table-responsive-sm">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>



