@using Entities;
@using Business;


<EditForm Model="oMaintenance">
    <div class="form-group">
        <label> <strong>Id de referencia:</strong> @oMaintenance.MaintenanceId</label>
    </div>
    <div class="form-group">
        <label><strong>Número de serie:</strong> @oMaintenance.DeviceId</label>
    </div>
    <div class="form-group">
        <label><strong>Alias del dispositivo:</strong> @oMaintenance.Device.Alias</label>
    </div>
    <div class="form-group">
        <label><strong>Fecha de instalación:</strong> @oMaintenance.Device.InstallationDate</label>
    </div>
    <div class="form-group">
        <label> <strong>Fecha de Mantenimiento:</strong> @oMaintenance.MaintenanceDate </label>
    </div>
    <div class="form-group">
        <label> <strong>Estado del dispositivo:</strong> </label>
        <p> @oMaintenance.StatusOfDevice</p>
    </div>
    <div class="form-group">
        <label> <strong>Resistencia de la malla:</strong> @oMaintenance.SpatOhms <span>&#8486;</span></label>
    </div>
    <div class="form-group">
        <label>
            <strong>Resistencia de las Semiesferas del Dispositivo:</strong> @oMaintenance.DeviceOhms M<span>&#8486;</span>
        </label>
    </div>
    <div class="form-group">
        <label><strong>Transferencia de Cargas:</strong> @oMaintenance.Ampers mA</label>
    </div>
    <div class="form-group">
        <label><strong>Nombre del Técnico:</strong> @oMaintenance.TechnicianName</label>
    </div>
    <div class="form-group">
        <label><strong>Número de Informe:</strong> @oMaintenance.ReportId</label>
    </div>


</EditForm>


@code{
    [Parameter]
    public string id { get; set; }
    MaintenanceEntity oMaintenance = new MaintenanceEntity();

    protected override async Task OnInitializedAsync()
    {
        oMaintenance = B_Maintenance.MaintenanceById(id);
    }

}