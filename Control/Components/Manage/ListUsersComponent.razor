@using Microsoft.AspNetCore.Identity;
@using Business;




<table class="table table-hover table-striped table-responsive-sm ">
    <thead>
        <tr>
            <th>Nombre de Usuario</th>
            <th>Correo</th>
            <th>Acciones</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Users)
        {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a class="btn btn-primary"  href="manage/ViewUser/@item.Id" >Ver</a></td>
            <td><a class="btn btn-secondary" href="/">Editar</a></td>            
            <td><a class="btn btn-warning" href="Identity/Admin/ChangePassByAdmin/@item.Id">Cambiar Contraseña </a></td>
            <td><input type="button" class="btn btn-dark" value="Desactivar"></td>            
        </tr>
        }
    </tbody>
</table>




